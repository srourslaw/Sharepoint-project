# SharePoint AI Dashboard - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
LOG_LEVEL=info
APP_NAME=SharePoint AI Dashboard
APP_VERSION=1.0.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
BACKEND_PORT=3001
FRONTEND_PORT=80
SERVER_TIMEOUT=30000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sharepoint_ai_dashboard
DB_USER=sharepointai
DB_PASSWORD=your_secure_db_password_here
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_DB=0
REDIS_TIMEOUT=5000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_complex
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d
ENCRYPTION_KEY=your_32_character_encryption_key_
SESSION_SECRET=your_session_secret_here
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# =============================================================================
# SHAREPOINT CONFIGURATION
# =============================================================================
SHAREPOINT_CLIENT_ID=your_sharepoint_client_id_here
SHAREPOINT_CLIENT_SECRET=your_sharepoint_client_secret_here
SHAREPOINT_TENANT_ID=your_tenant_id_here
SHAREPOINT_AUTHORITY=https://login.microsoftonline.com/
SHAREPOINT_SCOPES=Sites.Read.All,Files.ReadWrite.All,User.Read

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048
OPENAI_TEMPERATURE=0.7

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# AI Service Settings
AI_RATE_LIMIT=100
AI_TIMEOUT=30000
AI_RETRY_ATTEMPTS=3

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_SHAREPOINT_CLIENT_ID=your_sharepoint_client_id_here
REACT_APP_SHAREPOINT_TENANT_ID=your_tenant_id_here
REACT_APP_AI_API_ENDPOINT=http://localhost:3001/api/ai
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9091
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# Elasticsearch & Kibana
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601

# Application Insights (optional)
APPLICATIONINSIGHTS_CONNECTION_STRING=your_app_insights_connection_string

# =============================================================================
# FILE STORAGE
# =============================================================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf,doc,docx,ppt,pptx,xls,xlsx,txt,md

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# =============================================================================
# SMTP CONFIGURATION (for notifications)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM="SharePoint AI Dashboard <noreply@yourdomain.com>"

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=5000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem
SSL_CA_PATH=./certs/ca.pem

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ANALYSIS=true
FEATURE_REAL_TIME_CHAT=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_DOCUMENT_COLLABORATION=true
FEATURE_EXPORT_REPORTS=true

# =============================================================================
# DEVELOPMENT/DEBUG SETTINGS
# =============================================================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_PROFILING=false
ENABLE_SWAGGER=true

# =============================================================================
# DOCKER & DEPLOYMENT
# =============================================================================
COMPOSE_PROJECT_NAME=sharepoint-ai-dashboard
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest